<!-- /snippets/social-sharing.liquid -->
<div class="sns_social" data-permalink="{{ permalinkURL }}">
  <ul class="col3">
    <li>
      {% if settings.share_facebook %}
        <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="resp-sharing-button__link" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
          <img src="{{'btn_share_fb.png' | asset_url}}" alt="sns twitter" />
        </a>
      {% endif %}
    </li>
    <li>
      {% if settings.share_twitter %}
        <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="resp-sharing-button__link" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
          <img src="{{'btn_share_twitter.png' | asset_url}}" alt="sns line" />
        </a>
      {% endif %}
    </li>
    <li>
      {% if settings.share_pinterest %}
        <a target="_blank" href="//instagram.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="resp-sharing-button__link" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
          <img src="{{'btn_share_insta.png' | asset_url}}" alt="sns twitter" />
        </a>
      {% endif %}
    </li>
  </ul>
</div>
<style>
  .sns_social {
    display: flex;
    justify-content: flex-end;
  }
</style>