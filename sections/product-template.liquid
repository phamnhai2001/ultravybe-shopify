          <ul>
          {% for tag in product.tags %}
          {% capture url %}/collections/all/{{ tag | handle }}{% endcapture %}
            <li><a href="{{url}}">#{{tag}}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
