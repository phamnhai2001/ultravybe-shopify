<script type="text/javascript">
    $(document).ready(function(){
        $('html, body').animate({
            scrollTop: 0
        }, 300);
    });
    var productData = {{product | json}};

    var wishlistOption = localStorage.getItem('product_wishlist') || [];
    if (wishlistOption.length > 0) {
      wishlistOption = JSON.parse(localStorage.getItem('product_wishlist'));
    }
      var product = {
        "productId": productData.id,
      }

      $('#wish_list_btn').click(function (e) {
        e.preventDefault();
        var option = {};
        for (var i = 0; i < productData.options.length; i++) {
          var name = productData.options[i];
          var data = {};
          data[name] = $("#ProductSelect-product-template-option-" + i).val();
          option = Object.assign(option, data);
        }
        product = Object.assign(product, option);

        var isRemove = $(this).hasClass('active_favorited');
        /* Remove */
        if (isRemove) {
          var removeIndexOption = wishlistOption.map(function (e) { return e.productId; }).indexOf(productData.id);
          wishlistOption.splice(removeIndexOption, 1);
          localStorage.setItem('product_wishlist', JSON.stringify(wishlistOption));
        }
        /* Add */
        else {
          wishlistOption.push(product);
          localStorage.setItem('product_wishlist', JSON.stringify(wishlistOption));
        }
        localStorage.setItem('product_wishlist', JSON.stringify(wishlistOption));
      });
    (function ($) {
    var wishlist = localStorage.getItem('user_wishlist');
    if (wishlist == null){
      var wishlist = [];
    } else {
      var wishlist = JSON.parse(localStorage.getItem('user_wishlist'));
    }
    var productHandle = $('.wishlist-btn').data('product-handle');
    if(wishlist.includes(productHandle.toString())) {
      $('#wish_list_btn').addClass('active_favorited');
      $('#wish_list_btn').removeClass('active_favorite');
    }
    })(jQuery);
</script>
