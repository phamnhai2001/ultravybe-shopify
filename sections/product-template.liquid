{% assign barCode = product.first_available_variant.barcode %}
{% assign current_variant = product.selected_or_first_available_variant %}
<div itemscope itemtype="http://schema.org/Product" id="ProductSection" data-section-id="{{ section.id }}" data-section-type="product-template" data-image-zoom-type="{{ section.settings.product_image_zoom_type }}" data-show-extra-tab="{{ section.settings.show_extra_tab }}" data-extra-tab-content="{{ section.settings.extra_tab_content }}" data-cart-enable-ajax="{{ settings.cart_enable_ajax }}" data-enable-history-state="true">
  <meta itemprop="name" content="{{ product.title }}">
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | img_url: 'grande' }}">
  <div class="upper">
    {% render 'breadcrumbs' %}
  </div>
  <section class="section container_product_detail">
    <div class="upper">
      <div class="info_details">
        <div class="slider_thumbail">
          <div class="slider slider_main_thumbail">
            <div class="img_preview">
              <img
                class="xzoom"
                src="{{ product | img_url: 'master' }}"
                xoriginal="{{ product | img_url: 'master' }}"
              />
            </div>

            <div class="list_item_img">
            {%- for image in product.images -%}
              <a
                href="{{ image.src | img_url: 'master' }}"
                style="display: inline-block;"
              >
                <img
                  class="xzoom-gallery"
                  width="68"
                  src="{{ image.src | img_url: 'master' }}"
                  {% comment %} xpreview="{{ image.src | img_url: 'master' }}" {% endcomment %}
                />
                {%- endfor -%}
              </a>
            </div>
          </div>
        </div>
        <div class="info_details_list c-item">
          <div class="c-item__body">
            <div class="c_category">
              <span>{{product.type}}</span>
            </div>
            <h3 class="c-item__title">{{product.title}}</h3>
            <div class="c-item__author"><a href="/search?type=product&q={{ product.metafields.custom_fields["artist"] | url_param_escape }}">{{ product.metafields.custom_fields["artist"] }}</a></div>
            <ul>
              <li>{{ product.metafields.custom_fields["artist_kana"] }}</li>
              {% if product.metafields.custom_fields["genre"] != null %}
              <li>ジャンル：{{ product.metafields.custom_fields["genre"] }}</li>
              {% endif %}
              {% if product.metafields.custom_fields["release_date"] != null %}
              <li>{{ product.metafields.custom_fields["release_date"] | date: "%Y-%m-%d" }} 発売</li>
              {% endif %}
              {% if product.metafields.custom_fields["catalog_no"] != null %}
              <li>品番 : {{ product.metafields.custom_fields["catalog_no"] }}</li>
              {% endif %}
              {% if barCode != null %}
              <li>JAN : {{barCode}}</li>
              {% endif %}
              {% if product.metafields.custom_fields["country"] != null %}
              <li>発売国 : <a href="/search?type=product&q={{ product.metafields.custom_fields["country"] | url_param_escape }}"><span>{{ product.metafields.custom_fields["country"] }}</span></a></li>
              {% endif %}
              {% if product.metafields.custom_fields["era"] != null %}
              <li>年代：録音日{{ product.metafields.custom_fields["era"] | date: "%Y-%m-%d" }}</li>
              {% endif %}
              {% if product.metafields.custom_fields["condition"] != null %}
              <li>状態 : <a href="/search?type=product&q={{ product.metafields.custom_fields["condition"] | url_param_escape }}"><span>{{ product.metafields.custom_fields["condition"] }}</span></a></li>
              {% endif %}
              {% if product.vendor != null %}
              <li>LABEL : <a href="/search?type=product&q={{product.vendor | url_param_escape }}"><span>{{product.vendor}}</span></a></li>
              {% endif %}
              {% if product.metafields.custom_fields["format"] != null %}
              <li>フォーマット : {{ product.metafields.custom_fields["format"] }}</li>
              {% endif %}
              {% if product.metafields.custom_fields["disc_count"] != null %}
              <li>枚数 : {{ product.metafields.custom_fields["disc_count"] }}枚組</li>
              {% endif %}
              {% if product.metafields.custom_fields["appendices"] != null %}
              <li>付録 : {{ product.metafields.custom_fields["appendices"] }}</li>
              {% endif %}
              {% if product.metafields.custom_fields["specification"] != null %}
              <li>仕様 : <a href="/search?type=product&q={{ product.metafields.custom_fields["specification"] | url_param_escape }}"><span>{{ product.metafields.custom_fields["specification"] }}</span></a></li>
              {% endif %}
              {% if product.metafields.custom_fields["bonus"] != null %}
              <li>特典 : {{ product.metafields.custom_fields["bonus"] }}</li>
              {% endif %}
              {% if product.tags != null %}
              <li>
                関連タグ :
                  {% for tag in product.tags %}
                      {% capture url %}/collections/all/{{ tag | handle }}{% endcapture %}
                    <span class="txt_num2">
                        <a href="{{url}}">{{tag}}</a>
                    </span>
                  {% endfor %}
              </li>
              {% endif %}
            </ul>
          </div>
          <div class="set_cart_buy">
              <div class="c-item__price">
                {% comment %} <h3>{{ product.selected_or_first_available_variant.price | money }}</h3><span>(税別)</span> {% endcomment %}
                <h3>
                  {% if product.compare_at_price_max > product.price %}
                    {% comment %} <span id="ComparePriceA11y" class="visually-hidden">{{ 'products.product.sale_price' | t }}</span> {% endcomment %}
                  {% else %}
                    {% comment %} <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span> {% endcomment %}
                  {% endif %}
                  {% comment %} <span id="ProductPrice" class="product-single__price" itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}"> {% endcomment %}
                    {{ current_variant.price | money }}
                  {% comment %} </span> {% endcomment %}
                  {% if product.compare_at_price_max > product.price %}
                    {% comment %} <span id="PriceA11y" class="visually-hidden">{{ 'products.product.regular_price' | t }}</span> {% endcomment %}
                    {% comment %} <s class="product-single__price--compare" id="ComparePrice"> {% endcomment %}
                      {% comment %} {{ current_variant.compare_at_price | money }} {% endcomment %}
                    {% comment %} </s> {% endcomment %}
                  {% endif %}
                  {% comment %} {% include 'product-unit-price', variant: current_variant, available: true %} {% endcomment %}
                </h3><span>(税別)</span>
              </div>
              {% if current_variant.available %}
              {% form 'product', product, class: 'add_cart_item' %}
                
                {% if product.metafields.custom_fields["preorder"] == "true" %}
                <div class="in_stock">予約受付中</div>
                {% else %}
                <div class="in_stock">在庫あり</div>
                {% endif %}
                <!-- {% if product.variants.size > 1 %} -->
                {% comment %} <div id="box_check_option" class="box_select__"> {% endcomment %}
                  <select name="id" id="ProductSelect-{{ section.id }}" class="product-single__variants" data-productid="{{product.id}}">
                    {% for variant in product.variants %}
                      {% if variant.available %}
                        <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} data-sku="{{ variant.sku }}" value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money_with_currency }}</option>
                      {% else %}
                        <option disabled="disabled">
                          {{ variant.title }} - {{ 'products.product.sold_out' | t }}
                        </option>
                      {% endif %}
                    {% endfor %}
                  </select>
                {% comment %} </div> {% endcomment %}
                <!-- {% endif %} -->
                <input type="hidden" id="Quantity" name="quantity" value="1" min="1">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}"/>
                <button type="submit" name="add" id="AddToCart" class="btn_short01 btn_cart_item" data-cart-url="{{ routes.cart_url }}">
                  <span id="AddToCartText">カートに入れる</span>
                </button>
              {%endform %}
              {% else %}
                {% if product.metafields.custom_fields["preorder"] == "true" %}
                  <div class="out_in_stock">先行予約受付中で</div>
                {% else %}
                  <div class="out_in_stock">在庫なし</div>
                {% endif %}
                <button type="button" class="btn_cart_item_empty">完売しました</button>
              {% endif %}
              <div id="wish_list_btn" class="active_favorite">
                  <span class="action--wishlist tile-actions--btn flex wishlist-btn" data-product-handle="{{ product.handle }}" data-product-id="{{product.id}}">お気に入りに登録</span>
              </div>
              {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
          </div>
        </div>
      </div>
      <div class="content_details">
        <div class="item_description">
          <h3>
            {{ product.metafields.custom_fields["comment_title"] }}
          </h3>
          <p>
            {{ product.description}}
          </p>
        </div>
        <div class="inner_item_music">
          <div class="list_item_music">
              {% if product.metafields.custom_fields["jmd_url"] != null %}
                <a class="btn_view" href="javascript:void(0)" onClick="jplayer('KBH01','d1pYXtcty4','{{ product.metafields.custom_fields["jmd_url"] }}','1'); return false;">
                  <div class="btn_short01"><span>視聴する</span></div>
                </a>
              {% endif %}
            {% assign listTrackLists = product.metafields.custom_fields["tracklist"] | remove: "1. " | split: '. '%}
            <ul class="list_item_music_more">
              {% for list in listTrackLists %}
              <li>
                  {{ forloop.index }}. {{list}}
              </li>
              {% endfor %}
            </ul>
              {% if list.item_count > 30 %}
                <div class="more_list_music">
                  <span>MORE</span>
                </div>
              {% endif %}
          </div>
        </div>
        <div class="video_music">{{ product.metafields.custom_fields["embed"] }}</div>
        <div class="container_tag">
